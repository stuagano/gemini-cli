# Production environment variables for Gemini Enterprise
# Copy this to .env.prod and update with your actual values

# Database configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# Database credentials will be loaded from Docker secrets

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD_FILE=/run/secrets/redis_password

# API Keys (loaded from secrets)
GEMINI_API_KEY_FILE=/run/secrets/gemini_api_key
OPENAI_API_KEY_FILE=/run/secrets/openai_api_key

# Encryption keys (loaded from secrets)
ENCRYPTION_KEY_FILE=/run/secrets/agent_encryption_key
JWT_SECRET_FILE=/run/secrets/jwt_secret

# Service URLs
KNOWLEDGE_BASE_URL=http://knowledge-base:8001
VECTOR_DB_URL=http://qdrant:6333

# Monitoring and logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
METRICS_ENABLED=true
TELEMETRY_ENABLED=true

# Security settings
CORS_ORIGINS=https://gemini.company.com,https://app.company.com
ALLOWED_HOSTS=gemini.company.com,app.company.com
CSRF_TRUSTED_ORIGINS=https://gemini.company.com,https://app.company.com

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching
CACHE_TTL=3600
EMBEDDING_CACHE_TTL=86400
RESPONSE_CACHE_TTL=300

# Performance tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=60
UPLOAD_MAX_SIZE=10485760  # 10MB
CHUNK_SIZE=8192