# Gemini Enterprise Architect Monitoring Configuration
# Environment variables for monitoring stack deployment

# Core Configuration
ENVIRONMENT=production
NAMESPACE=gemini-monitoring
CLUSTER_NAME=gemini-enterprise-cluster

# Database Configuration
POSTGRES_PASSWORD=gemini_secure_monitoring_2024
POSTGRES_DB=monitoring
POSTGRES_USER=monitoring

# Redis Configuration
REDIS_PASSWORD=gemini_redis_secure_2024

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=gemini_admin_2024
GRAFANA_SECRET_KEY=gemini_grafana_secret_key_2024
GRAFANA_SECURITY_ADMIN_USER=admin

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=90d
PROMETHEUS_STORAGE_SIZE=50Gi
PROMETHEUS_SCRAPE_INTERVAL=15s

# Alertmanager Configuration
ALERTMANAGER_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERTMANAGER_PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key
ALERTMANAGER_EMAIL_FROM=alerts@gemini.ai
ALERTMANAGER_EMAIL_SMTP_HOST=smtp.gmail.com
ALERTMANAGER_EMAIL_SMTP_PORT=587
ALERTMANAGER_EMAIL_AUTH_USERNAME=alerts@gemini.ai
ALERTMANAGER_EMAIL_AUTH_PASSWORD=your_smtp_password

# Loki Configuration
LOKI_RETENTION_PERIOD=30d
LOKI_STORAGE_SIZE=20Gi

# Jaeger Configuration
JAEGER_STORAGE_TYPE=elasticsearch
JAEGER_ES_SERVER_URLS=http://elasticsearch:9200
JAEGER_SAMPLING_STRATEGIES_FILE=/etc/jaeger/sampling_strategies.json

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:14268/api/traces
OTEL_SERVICE_NAME=gemini-enterprise-architect
OTEL_SERVICE_VERSION=1.0.0

# External Monitoring Integrations
HONEYCOMB_API_KEY=your_honeycomb_api_key
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# GCP Monitoring Integration
GOOGLE_CLOUD_PROJECT=gemini-enterprise-project
GOOGLE_APPLICATION_CREDENTIALS=/etc/gcp/service-account.json

# Network Configuration
MONITORING_NETWORK=gemini-monitoring-network
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
ALERTMANAGER_PORT=9093
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
LOKI_PORT=3100

# Security Configuration
TLS_CERT_PATH=/etc/tls/certs
TLS_KEY_PATH=/etc/tls/private
CA_CERT_PATH=/etc/tls/ca

# Resource Limits
PROMETHEUS_MEMORY_LIMIT=4Gi
PROMETHEUS_CPU_LIMIT=2
GRAFANA_MEMORY_LIMIT=1Gi
GRAFANA_CPU_LIMIT=500m
LOKI_MEMORY_LIMIT=2Gi
LOKI_CPU_LIMIT=1
JAEGER_MEMORY_LIMIT=1Gi
JAEGER_CPU_LIMIT=500m

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_BUCKET=gemini-monitoring-backups

# Alert Routing
PLATFORM_TEAM_SLACK_CHANNEL=#platform
INTELLIGENCE_TEAM_SLACK_CHANNEL=#intelligence
SECURITY_TEAM_SLACK_CHANNEL=#security
OPTIMIZATION_TEAM_SLACK_CHANNEL=#optimization
BUSINESS_TEAM_SLACK_CHANNEL=#business

PLATFORM_TEAM_EMAIL=platform@gemini.ai
INTELLIGENCE_TEAM_EMAIL=intelligence@gemini.ai
SECURITY_TEAM_EMAIL=security@gemini.ai
OPTIMIZATION_TEAM_EMAIL=optimization@gemini.ai
BUSINESS_TEAM_EMAIL=business@gemini.ai

# Feature Flags
ENABLE_ADVANCED_ALERTING=true
ENABLE_COST_MONITORING=true
ENABLE_BUSINESS_METRICS=true
ENABLE_SECURITY_MONITORING=true
ENABLE_TRACE_SAMPLING=true
ENABLE_LOG_AGGREGATION=true

# Performance Tuning
MAX_CONCURRENT_QUERIES=20
QUERY_TIMEOUT=30s
MAX_SAMPLES_PER_QUERY=50000000
LOG_QUERY_TIMEOUT=60s

# Development/Testing Configuration
DEV_MODE=false
DEBUG_LOGGING=false
ENABLE_PROFILING=false
SYNTHETIC_DATA_GENERATION=false