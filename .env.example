# Gemini Enterprise Architect - Environment Configuration
# Copy this to .env and update with your actual values

# =============================================================================
# BASIC CONFIGURATION (Agents work with just these defaults!)
# =============================================================================

# Agent Server Port (default: 2000)
AGENT_SERVER_PORT=2000

# Environment
ENVIRONMENT=development
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# OPTIONAL: Google Cloud / Vertex AI (for enhanced RAG features)
# =============================================================================
# Uncomment and configure these ONLY if you have Google Cloud access
# The agents work perfectly fine without these!

# Your Google Cloud Project ID (OPTIONAL)
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Path to your service account JSON key file (OPTIONAL)
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Vertex AI region (OPTIONAL - us-central1 recommended)
# VERTEX_AI_LOCATION=us-central1

# Google AI/Gemini API Key (OPTIONAL - for base Gemini CLI integration)
# GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (for agent data and knowledge base)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gemini_enterprise
POSTGRES_USER=gemini_user
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis (for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# Vector Database (Qdrant for embeddings)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Metrics Collection
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_RETENTION_TIME=90d

# Grafana Dashboard
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password
GRAFANA_SECRET_KEY=your_grafana_secret_key

# Distributed Tracing
JAEGER_ENABLED=true
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
OTEL_SERVICE_NAME=gemini-enterprise-architect
OTEL_SERVICE_VERSION=1.0.0

# Logging
LOKI_ENABLED=true
LOKI_PORT=3100
STRUCTURED_LOGGING=true

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================

# Alertmanager
ALERTMANAGER_PORT=9093

# Slack Integration (REQUIRED for team alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_PLATFORM_CHANNEL=#platform
SLACK_INTELLIGENCE_CHANNEL=#intelligence
SLACK_SECURITY_CHANNEL=#security
SLACK_OPTIMIZATION_CHANNEL=#optimization

# Email Notifications
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@yourcompany.com
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password

# PagerDuty (for critical alerts)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption and JWT
JWT_SECRET=your_jwt_secret_key_min_32_chars
ENCRYPTION_KEY=your_encryption_key_32_chars
API_SECRET_KEY=your_api_secret_key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,yourdomain.com

# Authentication
AUTH_ENABLED=true
SESSION_TIMEOUT=3600  # 1 hour in seconds

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# GitHub Integration (for CI/CD and automation)
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_PATH=path/to/github-private-key.pem
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITHUB_INSTALLATION_ID=your_github_installation_id

# Slack Bot (for team collaboration)
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# External Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
HONEYCOMB_API_KEY=your_honeycomb_api_key

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Request Handling
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=60
UPLOAD_MAX_SIZE=10485760  # 10MB
CHUNK_SIZE=8192

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching
CACHE_TTL=3600  # 1 hour
EMBEDDING_CACHE_TTL=86400  # 24 hours
RESPONSE_CACHE_TTL=300  # 5 minutes

# Resource Limits
MEMORY_LIMIT=4Gi
CPU_LIMIT=2
WORKER_PROCESSES=4

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Features
DEBUG=false
DEV_MODE=false
SYNTHETIC_DATA_GENERATION=false
ENABLE_PROFILING=false

# Hot Reload (development only)
HOT_RELOAD=true
WATCH_FILES=true

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/test_db
PYTEST_MARKERS=unit,integration

# =============================================================================
# BUSINESS LOGIC CONFIGURATION
# =============================================================================

# Scout Configuration
SCOUT_ENABLED=true
SCOUT_SIMILARITY_THRESHOLD=0.8
SCOUT_INDEX_BATCH_SIZE=100
SCOUT_DUPLICATE_DETECTION_ACCURACY_TARGET=95

# Guardian Configuration
GUARDIAN_ENABLED=true
GUARDIAN_VALIDATION_TIMEOUT=5
GUARDIAN_STRICT_MODE=false

# Killer Demo Configuration
KILLER_DEMO_ENABLED=true
KILLER_DEMO_COST_THRESHOLD=100  # USD
KILLER_DEMO_PERFORMANCE_THRESHOLD=20  # percent improvement

# Knowledge Base Configuration
KNOWLEDGE_BASE_ENABLED=true
RAG_CHUNK_SIZE=1000
RAG_OVERLAP=200
RAG_TOP_K=5
EMBEDDING_MODEL=text-embedding-004

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Maintenance Windows
MAINTENANCE_ENABLED=false
MAINTENANCE_SCHEDULE="0 3 * * 0"  # Weekly on Sunday at 3 AM
AUTO_CLEANUP_ENABLED=true